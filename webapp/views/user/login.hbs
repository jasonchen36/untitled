<main id="page-user-login" class="full-screen-grid-container main-container">
    <div class="small-6 medium-6">
        <h1>Welcome Back to TAXplan</h1>
            <form id="user-login-form">
                <p>
                    <label for="login-email">EMAIL</label>
                    <input type="email" id="login-email" name="email"/>
                </p>
                <p>
                    <label for="login-password">PASSWORD</label>
                    <input type="password" id="login-password" name="password"/>
                </p>
                <button type="submit" id="login-submit">Sign In</button>
            </form>
            <p>
                <a href="/password-reset">I Forgot My Password</a>
            </p>
    </div>
    <div class="yellow-container small-6 medium-6 grid-end">
        <h1>Marketing!</h1>
    </div>
</main>