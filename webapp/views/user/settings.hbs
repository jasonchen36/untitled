<section id="user-settings" class="full-screen-grid-container main-container-no-padding">
    <div class="small-12 medium-9 user-settings-container">
        <div class="container-header fixed-page-header medium-9">
            <h1 class="header">Settings</h1>
            <button type="submit" id="settings-done" class="purple header medium">Back to Dashboard</button>
            <button type="submit" id="settings-submit" data-id="{{@root.users.0.id}}" class="green header medium">Save</button>
        </div>
        <div class="small-5 medium-5">
            <form id="user-settings-form">
                <p class="no-margin">
                    <label for="settings-email">PLEASE NOTE: For your security, after changing your email and/or
                        password you will be logged out and will have to log back in with your new credentials.
                        <br/><br/>Change Email Address</label>
                    <input type="email" id="settings-email" name="email"/>
                    <p id="label-error-settings-email" class="label-error">Please enter your email address</p>
                </p>
                <p class="no-margin">
                    <label for="settings-email">Confirm Email Address</label>
                    <input type="email" id="settings-confirm-email" name="confirmedEmail"/>
                    <p id="label-error-settings-confirm-email" class="label-error">Please confirm your email address</p>
                </p>
                <p class="no-margin add-top-margin add-top-padding">
                    <label for="settings-email">New Password</label>
                    <input type="password" id="settings-password" name="password"/>
                <p id="label-error-settings-new-password" class="label-error">Please enter your password</p>
                </p>
                <p class="no-margin">
                    <label for="settings-email">Confirm New Password</label>
                    <input type="password" id="settings-confirm-password" name="confirmedPassword"/>
                <p id="label-error-settings-confirm-password" class="label-error">Please confirm your password</p>
                </p>
            </form>
        </div>
    </div>
    <div class="hide-for-small small-12 medium-3 grid-end white-container position-fixed">
        <div class="wrapper-container side-info has-image">
            <div data-id="" class="i--icon-woosh-mail"></div>
            <p id="tax-profile-instructions" class="side-info-blurb">
            </p>
        </div>
    </div>
</section>
{{>settings-confirm-modal}}