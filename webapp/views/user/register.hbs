<main id="page-user-register" class="full-screen-grid-container main-container">
    <div class="small-12 medium-7">
        <div class="content-form">
            <div class="container-header">
                <h1 class="header">Hi {{firstName}}, welcome to TAXplan</h1>
                <button type="submit" id="register-submit" class="green header">Sign In</button>
            </div>
            <form id="user-register-form">
                <h1 class="subtitle">Let’s get started…</h1>
                <p>
                    <label for="register-email">PREFERRED EMAIL</label>
                    <input type="email" id="register-email" name="email"/>
                </p>
                <p>
                    <label for="register-confirm-email">CONFIRM EMAIL</label>
                    <input type="email" id="register-confirm-email" name="confirmemail"/>
                </p>
                <p class="container-password-form-register">
                    <label for="register-password">PASSWORD</label>
                    <input type="password" id="register-password" name="password"/>
                </p>
                <p>
                    <label for="register-confirm-password">CONFIRM PASSWORD</label>
                    <input type="password" id="register-confirm-password" name="confirmpassword"/>
                </p>

            </form>
        </div>
    </div>
    <div class="hide-for-small small-12 medium-5 grid-end white-container">
        <div class="wrapper-container side-info">
            <h3 class="font-yellow">Hi, from the TAXplan Team</h3>
