<div class="border-bottom-light-gray add-bottom-padding add-top-padding clear-both">
    <div class="container-inline-input long">
        <label for="first-name-{{taxReturnId}}">DEPENDANT FIRST NAME</label>
        <input id="first-name-{{taxReturnId}}" name="firstName" type="text" value="{{dependantForm.first_name}}" class="inline-input"/>
        <p class="label-error">First name needed</p>
    </div>
    <div class="container-inline-input long">
        <label for="last-name-{{taxReturnId}}">DEPENDANT LAST NAME</label>
        <input id="last-name-{{taxReturnId}}" type="text" value="{{dependantForm.last_name}}" name="lastName" class="inline-input"/>
        <p class="label-error">Last name needed</p>
    </div>
    <div class="container-inline-input long">
        <label class="under">DATE OF BIRTH</label>
    </div>
    <div class="container-inline-input long">
        <label class="under" for="relationship-{{taxReturnId}}">RELATIONSHIP</label>
    </div>
    <div class="container-inline-input short">
        <input id="birth-day-{{taxReturnId}}" type="text" value="{{dependantForm.day}}" class="inline-input text-center" placeholder="DD" maxlength="2" name="day"/>
        <p class="label-error">Day needed</p>
    </div>
    <div class="container-inline-input short">
        <input id="birth-month-{{taxReturnId}}" type="text" value="{{dependantForm.month}}" class="inline-input text-center" placeholder="MM" maxlength="2" name="month"/>
        <p class="label-error">Month needed</p>
    </div>
    <div class="container-inline-input short">
        <input id="birth-year-{{taxReturnId}}" type="text" value="{{dependantForm.year}}" class="inline-input text-center" placeholder="YYYY" maxlength="4" name="year"/>
        <p class="label-error">Year needed</p>
    </div>
    <div class="container-inline-input long">
        <div class="drop-down">
            <select id="relationship-{{taxReturnId}}" name="relationship" class="drop-down-select">
                <option value="">Selectâ€¦</option>
                <option value="Daughter" {{{isOptionSelected "Daughter" dependantForm.relationship}}}>Daughter</option>
                <option value="Son" {{{isOptionSelected "Son" dependantForm.relationship}}}>Son</option>
                <option value="Mother" {{{isOptionSelected "Mother" dependantForm.relationship}}}>Mother</option>
                <option value="Father" {{{isOptionSelected "Father" dependantForm.relationship}}}>Father</option>
                <option value="Grandfather" {{{isOptionSelected "Grandfather" dependantForm.relationship}}}>Grandfather</option>
                <option value="Grandmother" {{{isOptionSelected "Grandmother" dependantForm.relationship}}}>Grandmother</option>
                <option value="Grandson" {{{isOptionSelected "Grandson" dependantForm.relationship}}}>Grandson</option>
                <option value="Granddaughter" {{{isOptionSelected "Granddaughter" dependantForm.relationship}}}>Granddaughter</option>
                <option value="Sister" {{{isOptionSelected "Sister" dependantForm.relationship}}}>Sister</option>
                <option value="Brother" {{{isOptionSelected "Brother" dependantForm.relationship}}}>Brother</option>
                <option value="Aunt" {{{isOptionSelected "Aunt" dependantForm.relationship}}}>Aunt</option>
                <option value="Uncle" {{{isOptionSelected "Uncle" dependantForm.relationship}}}>Uncle</option>
                <option value="Niece" {{{isOptionSelected "Niece" dependantForm.relationship}}}>Niece</option>
                <option value="Nephew" {{{isOptionSelected "Nephew" dependantForm.relationship}}}>Nephew</option>
            </select>
        </div>
        <p class="label-error">Relationship needed</p>
    </div>
    {{#compare @root.taxReturns.length 1 operator='==='}}
        <div class="add-top-padding checkbox-container">
            <div id="shared-{{taxReturnId}}" class="checkbox" data-tax-return-id="{{taxReturnId}}"></div>
            <p class="checkbox-label">THIS DEPENDANT IS SHARED</p>
        </div>
    {{/compare}}
    {{#compare @root.taxReturns.length 1 operator='>'}}
        {{#compare filerType 'primary' operator='==='}}
            <div class="add-top-padding checkbox-container">
                <div id="shared-{{taxReturnId}}" name="isShared" class="checkbox {{dependantForm.isShared}}" data-tax-return-id="{{taxReturnId}}"></div>
                <p class="checkbox-label">THIS DEPENDANT IS SHARED WITH SPOUSE/PARTNER</p>
            </div>
        {{/compare}}
        {{#compare filerType 'spouse' operator='==='}}
            <div class="add-top-padding checkbox-container">
                <div id="shared-{{taxReturnId}}" name="isShared" class="checkbox {{dependantForm.isShared}}" data-tax-return-id="{{taxReturnId}}"></div>
                <p class="checkbox-label">THIS DEPENDANT IS SHARED WITH SPOUSE/PARTNER</p>
            </div>
        {{/compare}}
    {{/compare}}
    <div class="add-top-padding">
        <button class="dependants-button-cancel grey" data-tax-return-id="{{taxReturnId}}">Cancel</button>
        <button class="dependants-button-save green" data-id="{{dependantForm.id}}-{{dependantForm.first_name}}-{{dependantForm.last_name}}" data-tax-return-id="{{taxReturnId}}">Save</button>
    </div>
</div>
