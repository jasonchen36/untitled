<section id="personal-profile-dependants" class="full-screen-grid-container main-container">
    <div class="small-12 medium-9">
        <div class="container-header fixed-page-header medium-9">
            <h1 class="header">Dependants</h1>
            <button id="dependants-submit" class="green header">Next</button>
            <button id="dependants-back" class="grey header">Previous</button>
        </div>
        <div class="content-form">
            <form id="dependants-form">
                {{#each taxReturns}}
                    <div class="border-bottom-light-grey add-bottom-padding taxplan-tile-container taxplan-form-container" data-id="{{taxReturnId}}">
                        <h1 class="subtitle  {{#if @index}}border-top-light-gray{{/if}}">
                            {{#compare @index 0 operator="=="}}
                                <span class="capitalize">{{firstName}}</span>, do you or any of your other filers have children or financially support another person?
                            {{else}}
                                <span class="capitalize">{{firstName}}</span>, do you have children or financially support another person?
                            {{/compare}}
                        </h1>
                         <section data-id="{{taxReturnId}}" class="full-screen-grid-container taxplan-tile-container">

                             <div id="yes-{{taxReturnId}}" data-tr-id="{{taxReturnId}}"  data-id="{{{questions.answers.0.question_id}}}" class="taxplan-tile small-button dependants-button-yes {{#if questions.answers.0.answer}}active{{/if}} " data-instructions="{{{questions.answers.0.instructions}}}"  data-text="Yes"  data-type="Bool">
    <span class="taxplan-tile-label">Yes</span>
                            </div>
                             <div id="no-{{taxReturnId}}"  data-tr-id="{{taxReturnId}}"  data-id="{{{questions.answers.0.question_id}}}" class="taxplan-tile small-button dependants-button-no {{#if questions.answers.0.answer}}{{else}}active{{/if}} " data-instructions="{{{questions.answers.0.instructions}}}" data-text="No"  data-type="Bool">
    <span class="taxplan-tile-label">No</span>
                            </div>
           
                       </section>
                        {{#hasDependantsSelected questions.answers}}
                            {{#each dependants}}
                              {{#if will_delete}}
                              {{else}}
                                <div class="border-bottom-light-gray clear-both">
                                    <div class="container-inline-input long">
                                        <p>{{first_name}} {{last_name}}</p>
                                    </div>
                                    <div class="container-inline-input">
                                        <p>{{day}}/{{month}}/{{year}}</p>
                                    </div>
                                    <div class="container-inline-input container-small-button">
                                        <div class="container-inline-input">
                                            <button class="dependants-button-delete green-outline" data-id="{{id}}-{{first_name}}-{{last_name}}">Delete</button>
                                        </div>
                                        <div class="container-inline-input">
                                            <button class="dependants-button-edit green-outline" data-id="{{id}}-{{first_name}}-{{last_name}}">Edit</button>
                                        </div>
                                    </div>
                                </div>
                              {{/if}}
                            {{/each}}
                            {{#if dependantForm}}
                                {{>personal-profile-dependant-form taxReturns=../taxReturns}}
                            {{else}}
                                <div class="dependants-button-add add-bottom-padding add-top-padding" data-tax-return-id="{{taxReturnId}}">
                                    <div class="i--icon-add"></div>
                                    <label class="label-add">ADD A DEPENDANT FOR {{firstName}}</label>
                                </div>
                            {{/if}}
                        {{/hasDependantsSelected}}
                    </div>
                {{/each}}
            </form>
        </div>
    </div>
    {{>personal-profile-sidebar hasTiles=true sidebarImage="i--icon-dependants" sidebarTitle="What is a dependant?"}}
</section>
{{>personal-profile-popup popupTitle="Dependants" popupBlurb="You must select at least one tile that applies" popupImage="i--icon-alert"}}
