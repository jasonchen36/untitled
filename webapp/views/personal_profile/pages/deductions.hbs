<section id="personal-profile-deductions" class="full-screen-grid-container main-container">
    <div class="small-12 medium-7">
        <div class="content-form">
            <div class="container-header">
                <h1 class="header">Deductions</h1>
                <button id="deductions-submit" type="submit" class="green header">Next</button>
                <button id="deductions-back" class="grey header">Previous</button>
            </div>
            <form id="deductions-form">

                 {{#each taxReturns}}
                    <h1 class="subtitle">{{firstName}} please select all your 2016 deductions:</h1>
                     {{#compare @index 0 operator="=="}}
                         {{>personal-profile-options questions=questions.answers activeTiles=questions.answers.answer tileContainerId=taxReturnId isPrimaryFiler=true}}
                     {{else}}
                         {{>personal-profile-options questions=questions.answers activeTiles=questions.answers.answer tileContainerId=taxReturnId}}
                     {{/compare}}
                    <input type="hidden" id="tax-return-id-{{taxReturnId}}" name="taxReturnId" value="{{taxReturnId}}"/>
                {{/each}}
            </form>
        </div>
    </div>
    {{>personal-profile-sidebar sidebarTitle="Deductions"}}
</section>
{{>personal-profile-popup popupTitle="Deductions" popupBlurb="You must select at least one tile that applies" popupImage="i--icon-taxplan-logo"}}
