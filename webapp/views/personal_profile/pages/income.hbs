<section id="personal-profile-income" class="full-screen-grid-container main-container">
    <div class="small-12 medium-7">
        <div class="container-header fixed-page-header">
            <h1 class="header">Income</h1>
            <button id="income-submit" type="submit" class="green header">Next</button>
            <button id="income-back" class="grey header">Previous</button>
        </div>
        <div class="content-form">
            <form id="income-form">
                {{#each taxReturns}}
                    <h1 class="subtitle">{{firstName}} please select all your sources of income in 2016:</h1>
                {{#compare @index 0 operator="=="}}
                    {{>personal-profile-options questions=questions.answers activeTiles=questions.answers.answer tileContainerId=taxReturnId isPrimaryFiler=true}}
                {{else}}
                    {{>personal-profile-options questions=questions.answers activeTiles=questions.answers.answer tileContainerId=taxReturnId}}
                {{/compare}}
                    <input type="hidden" id="tax-return-first-name-{{taxReturnId}}" name="taxReturnFirstName{{taxReturnId}}" value="{{firstName}}"/>
                {{/each}}
            </form>
        </div>
    </div>
    {{>personal-profile-sidebar sidebarTitle="Income"}}
</section>
{{>personal-profile-popup popupTitle="Income" popupBlurb="You must select at least one tile that applies" popupImage="i--icon-alert"}}
