<section id="personal-profile-address" class="full-screen-grid-container main-container" >
    <div class="small-12 medium-9">
        <div class="container-header fixed-page-header medium-9">
            <h1 class="header">Address</h1>
            <button id="address-submit" class="green header">Next</button>
            <button id="address-back" class="grey header">Previous</button>
        </div>
        <div class="content-form">
            <form id="address-form">
                <h1 class="subtitle">Almost done â€“ we just need current mailing address{{#compare @root.taxReturns.length 1 operator=">"}}es for yourself and all your other filers{{/compare}}:</h1>
                <div id="container-address-form">
                    {{#each taxReturns}}
                        <div class="border-bottom-light-grey add-bottom-padding taxplan-form-container" data-id="{{taxReturnId}}">
                            <h1 class="filer-name {{#if @index}}border-top-light-gray{{/if}} add-top-padding"><span class="capitalize">{{firstName}}:</span></h1>
                            {{#compare @index 0 operator="!="}}
                                <div class="add-bottom-padding checkbox-container">
                                    <div class="checkbox"></div>
                                    <p class="checkbox-label">SAME ADDRESS AS {{@root.taxReturns.0.firstName}}</p>
                                </div>
                            {{/compare}}
                            <div>
                                <div class="container-inline-input long">
                                    <label for="first-line-{{taxReturnId}}">CURRENT STREET ADDRESS</label>
                                    <input id="first-line-{{taxReturnId}}" type="text" value="{{address.address_line1}}" class="inline-input" name="street"/>
                                    <p id="address-first-line-label-error-{{taxReturnId}}" class="label-error">Address line needed</p>
                                </div>
                                <div class="container-inline-input short">
                                    <label for="city-{{taxReturnId}}">CITY</label>
                                    <input id="city-{{taxReturnId}}" type="text" value="{{address.city}}" class="inline-input" name="city"/>
                                    <p id="address-city-label-error-{{taxReturnId}}" class="label-error">City needed</p>
                                </div>
                                <div class="container-inline-input short">
                                    <label for="province-{{taxReturnId}}">PROVINCE</label>
                                    <div class="drop-down">
                                        <select class="drop-down-select" id="province-{{taxReturnId}}" name="province">
                                            {{>province-options selectedProvince=address.providence}}
                                        </select>
                                    </div>
                                    <p id="address-province-label-error-{{taxReturnId}}" class="label-error">Province needed</p>
                                </div>
                                <div class="container-inline-input short">
                                    <label for="postal-code-{{taxReturnId}}">POSTAL CODE</label>
                                    <input id="postal-code-{{taxReturnId}}" type="text" value="{{address.postal_code}}" class="inline-input" name="postalCode" maxlength="6"/>
                                    <p id="address-postal-code-label-error-{{taxReturnId}}" class="label-error">Postal Code needed</p>
                                </div>
                            </div>
                            <div class="container-residence">
                                <div class="container-inline-input long">
                                    <label for="province-residence-{{taxReturnId}}" class="under">What was your province of residence on December 31, 2016?</label>
                                    <div class="drop-down">
                                        <select class="drop-down-select" id="province-residence-{{taxReturnId}}" name="provinceResidence">
                                            {{>province-options selectedProvince=provinceOfResidence}}
                                        </select>
                                    </div>
                                    <p id="address-residence-label-error-{{taxReturnId}}" class="label-error">Province needed</p>
                                </div>
                                <div class="container-inline-input long">
                                    <label for="country-{{taxReturnId}}" class="under">COUNTRY</label>
                                    <input class="inline-input" id="country-{{taxReturnId}}" name="country" type="text" value="{{address.country}}"/>
                                    <p id="address-country-label-error-{{taxReturnId}}" class="label-error">Country needed</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </form>
        </div>
    </div>
    {{>personal-profile-sidebar hasTiles=false isShortPath=false sidebarImage="i--icon-address" sidebarTitle="Why do you need my address?"  sidebarDescription="Your current mailing address must be identified on your tax return for us to file your results with the CRA. We ask for your province of residence on December 31, 2016 to determine your provincial tax rate. <br><br>
Our privacy terms are listed on the website"  }}
</section>
{{>personal-profile-popup popupTitle="Income" popupBlurb="Please select a tile lorem ipsum" popupImage="i--icon-alert"}}
{{>more}}
