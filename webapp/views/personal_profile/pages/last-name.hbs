<section id="personal-profile-last-name" class="full-screen-grid-container main-container">
    <div class="small-12 medium-9">
        <div class="container-header fixed-page-header medium-9">
            <h1 class="header">Hi <span class="capitalize">{{accountInfo.firstName}}</span>, welcome to TAXplan!</h1>
            <button id="last-name-submit" type="submit" class="green header">Next</button>
        </div>
        <div class="content-form">
            <form id="last-name-form">
                <h1 class="subtitle  {{#if @index}}border-top-light-gray{{/if}}"><span class="capitalize">{{accountInfo.firstName}}</span>, please provide your full legal name including middle initials.</h1>
                {{#each taxReturns}}
                    <div class="add-top-padding taxplan-form-container" data-id="{{taxReturnId}}">
                        <div class="container-inline-input long">
                            <label for=”first-name-{{taxReturnId}}”>FIRST NAME</label>
                            <input type="text" id="first-name-{{taxReturnId}}" class="inline-input" name="firstName" placeholder="First Name" value="{{firstName}}"/>
                            <p id="first-name-label-error-first-name-{{taxReturnId}}" class="label-error">First Name Needed</p>
                        </div>
                        <div class="container-inline-input long">
                            <label for="middle-initial">MIDDLE INITIAL</label>
                            <input type="text" id="middle-initial-{{taxReturnId}}" class="inline-input" name="middleInitial" placeholder="Middle Initial" value="{{middleInitial}}"/>
                            <p id="middle-initial-label-error-first-name-{{taxReturnId}}" class="label-error">Middle Initial Needed</p>
                        </div>
                        <div class="container-inline-input long">
                            <label for="last-name">LAST NAME</label>
                            <input type="text" id="last-name-{{taxReturnId}}" class="inline-input" name="lastName" placeholder="Last Name" value="{{lastName}}"/>
                            <p id="last-name-label-error-first-name-{{taxReturnId}}" class="label-error">Last Name Needed</p>
                        </div>
                        <input type="hidden" id="tax-return-id-{{taxReturnId}}" name="taxReturnId" value="{{taxReturnId}}"/>

                    </div>
                {{/each}}
            </form>
        </div>
    </div>
    {{>personal-profile-sidebar hasTiles=false isShortPath=false sidebarImage="i--icon-filersnames" sidebarTitle="Legal Name" sidebarDescription="TAXplan needs your name as it appears on existing Canada Revenue Agency form to file your results. Don’t worry if your name changed this year, you can submit documents for that later."}}
</section>
{{>more}}
