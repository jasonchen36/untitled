{{#if isChat}}
    <section class="small-2 medium-3 yellow-container">
        <div id="dashboard-chat-activate" class="sidebar-menu-item active">
            <div class="i--icon-chat icon-sidebar-item"></div>
            <p class="label-sidebar-menu-item font-sidebar-dark-grey">MESSAGE CENTER</p>
            {{#if newMessageCount}}
                <div class="label-sidebar-messages-count">{{newMessageCount}}</div>
            {{/if}}
        </div>
        <div id="dashboard-upload-activate" class="sidebar-menu-item">
            <div class="i--icon-upload icon-sidebar-item"></div>
            <p class="label-sidebar-menu-item font-sidebar-dark-grey">UPLOAD YOUR DOCUMENTS</p>
        </div>
        <!--todo, variable for return started -->
        {{#if true}}
            <div id="dashboard-my-return-activate" class="sidebar-menu-item">
                <div class="i--icon-return icon-sidebar-item"></div>
                <p class="label-sidebar-menu-item font-sidebar-dark-grey">YOUR TAX RETURN</p>
            </div>
        {{/if}}
        <div id="container-dashboard-sidekick-ad">
            <div class="i--icon-get-app"></div>
            <p class="label-sidekick-blurb">Photograph & upload your tax docs with TaxPlanâ€™s FREE Sidekick app.</p>
            <button class="green">Get it now</button>
        </div>
    </section>
{{else}}
    <div id="container-collapsed-sidebar" class="yellow-container">
        <div class="no-margin">
            <div id="dashboard-chat-activate" class="sidebar-menu-item collapsed">
                <div class="i--icon-chat icon-sidebar-item collapsed"></div>
                <p class="label-sidebar-menu-item collapsed font-sidebar-dark-grey">MSG</p>
            </div>
            <div id="dashboard-upload-activate" class="sidebar-menu-item collapsed active">
                <div class="i--icon-upload icon-sidebar-item collapsed"></div>
                <p id="dashboard-upload-activate" class="label-sidebar-menu-item collapsed font-sidebar-dark-grey">UPLOAD</p>
            </div>
            <!--todo, variable for return started -->
            {{#if true}}
                <div id="dashboard-my-return-activate" class="sidebar-menu-item collapsed">
                    <div class="i--icon-return icon-sidebar-item collapsed"></div>
                    <p class="label-sidebar-menu-item collapsed font-sidebar-dark-grey">RETURN</p>
                </div>
            {{/if}}
            <div id="container-dashboard-sidekick-ad" class="collapsed">
                <div class="i--icon-get-app collapsed"></div>
                <p class="label-sidebar-menu-item collapsed font-green">GET THE APP</p>
            </div>
        </div>
    </div>
{{/if}}

