{{#if taxProId}}
    <div class="small-3 medium-3 grid-end">
        <div id="container-dashboard-taxpro" class="not-open">
            <div class="container-taxpro-introduction">
                {{#if taxProPic}}
                    <div class="container-taxpro-pic">
                        {{{documentTaxProRoundedHelper taxProPic taxProName}}}
                    </div>
                {{else}}
                    <div class="i--icon-message-taxplan"></div>
                {{/if}}
                <p class="no-margin label-introduction-line">Your TaxPro</p>
                <p class="no-margin label-introduction-name font-yellow">{{taxProName}}</p>
                <p class="no-margin label-introduction-line">{{taxProTitle}}</p>
                <p id="taxpro-show-description" class="no-margin description-symbol font-yellow">+</p>
            </div>
            <p id="taxpro-description" class="label-taxpro-description">
                {{{taxProDescription}}}
            </p>
        </div>
    </div>
{{else}}
    <div class="small-3 medium-3 grid-end">
        <div id="container-dashboard-welcome">
            <div class="i--icon-logo"></div>
        </div>
    </div>
{{/if}}
{{#if hasDescription}}
<div class="small-3 medium-3 grid-end white-container">
        <div id="container-dashboard-side-info-description">
            <h3 class="text-left">Direct Deposit</h3>
            <p class="side-info-blurb text-left">
                Direct deposit is a fast, easy and secure way to get your payments on time in the event of emergency or unforeseen circumstances. For a one-time only fee of $5.00 + hst TAXplan will set up direct deposit for you with the Canada Revenue Agency.
            </p>
        </div>
 </div>
{{/if}}
