{{>dashboard-left-sidebar isChat="true"}}
<section id="dashboard-chat" class="small-7 medium-6">
    <div id="dashboard-chat-container">
        {{#each messages}}
            {{#if isFirst}}<p class="message-today-header line-behind"><span class="hide-line-behind">TODAY</span></p>{{/if}}
            <div class="chat-message add-top-padding add-bottom-padding">
                {{#if isFromUser}}
                    <p class="label-message-date add-right-padding text-right">{{date}}</p>
                    <p id="chat-message-user-body" class="label-message-content user display-inline-block side-info-blurb">
                        {{{replacedBody}}}
                    </p>
                {{else if isFromTaxPro}}
                    <div class="i--icon-message-taxplan"></div>
                    <p id="chat-message-taxpro-body" class="label-message-content taxpro display-inline-block side-info-blurb">
                        {{{replacedBody}}}
                    </p>
                    <p class="label-message-date add-left-padding">{{date}}</p>
                {{else}}
                    <div class="i--icon-message-taxplan"></div>
                    <p id="chat-message-taxplan-body" class="label-message-content taxplan display-inline-block side-info-blurb">
                        {{{replacedBody}}}
                    </p>
                    <p class="label-message-date add-left-padding">{{date}}</p>
                {{/if}}
            </div>

        {{/each}}
    </div>
    <form id="dashboard-chat-form" class="border-top-light-gray">
        <textarea id="dashboard-chat-message" rows="3" name="message" class="text-field-chat"></textarea>
        <button type="submit" id="dashboard-chat-submit" class="green short button-send">Send</button>
    </form>
</section>
{{>dashboard-right-sidebar}}