<section id="tax-profile-filing-for" class="full-screen-grid-container main-container">
    <div class="small-12 medium-7">
        <div class="content-form">
            <div class="container-header">
                <h1 class="header">Multiple Filers</h1>
                <button type="submit" id="filing-for-submit" class="green header">Next</button>
                <button id="filing-for-back" class="grey header">Previous</button>
            </div>
            <h1 class="subtitle">
                Hi {{name}}, can you please select all the people you are filing for:
            </h1>
            <form id="filing-for-form">
                <p>
                <input type="checkbox" id="filing-for-myself" name="myself" {{#compare filingType.myself 1 operator="=="}}checked="checked"{{/compare}}/>
                    <label for="filing-for-myself" data-label-filing="Myself" class="myself"></label>
                </p>
                <p>
                    <input type="checkbox" id="filing-for-spouse" name="spouse" {{#compare filingType.spouse 1 operator="=="}}checked="checked"{{/compare}}/>
                    <label for="filing-for-spouse" data-label-filing="My Spouse/Partner"></label>
                </p>
                <p>
                    <input type="checkbox" id="filing-for-other" name="other" {{#compare filingType.other 1 operator="=="}}checked="checked"{{/compare}}/>
                    <label for="filing-for-other" data-label-filing="Other Person/People"></label>
                </p>
            </form>
        </div>
    </div>
    <div class="hide-for-small small-12 medium-5 grid-end white-container">
        <div class="wrapper-container sideinfo has-image">
            <div class="i--icon-multifiler"></div>
            <h3 class="font-yellow">Multiple Filers</h3>
