<div class="hide-for-small small-12 medium-3 grid-end white-container position-fixed">
    <div class="wrapper-container side-info {{#if sidebarImage}}has-image{{/if}}">
        {{#if sidebarImage}}
            <div data-id="" id="tax-profile-sidebar-image" class="{{sidebarImage}}"></div>
        {{/if}}
        <h3 id="tax-profile-sidebar-header" class="font-yellow">{{sidebarTitle}}</h3>
            <p id="tax-profile-instructions" class="side-info-blurb">
                {{#if hasTiles}}
                    {{#if isFiliingFor}}
                        {{@root.questions.filingFor.0.category_displaytext}}
                    {{else}}
                        {{@root.questions.quoteApplies.0.category_displaytext}}
                    {{/if}}
                {{else}}
                    {{{sidebarDescription}}}
                {{/if}}
            </p>
    </div>
</div>
